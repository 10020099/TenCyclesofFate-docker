# OpenAI API Settings
OPENAI_API_KEY="your_openai_api_key_here"
OPENAI_BASE_URL="https://api.openai.com/v1"
OPENAI_MODEL="gpt-3.5-turbo"

# Image Generation Settings (optional - leave empty to disable)
# IMAGE_GEN_MODEL="gpt-image-1"  # 图片生成模型
# IMAGE_GEN_BASE_URL=""  # 为空则使用 OPENAI_BASE_URL
# IMAGE_GEN_API_KEY=""  # 为空则使用 OPENAI_API_KEY
# IMAGE_GEN_IDLE_SECONDS=10  # 状态静止多少秒后触发图片生成

# JWT Settings for OAuth2
SECRET_KEY="a_very_secret_key_that_should_be_changed"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Password Login (personal deployment)
# 必填。用于登录并保护你的 AI 调用额度。
GAME_PASSWORD="change_me"
# 可选。你的玩家ID（用于存档文件名）。多设备共用同一存档时保持不变。
PLAYER_ID="player"
# 若站点走 HTTPS，建议设为 true（Cookie 将带 Secure 标记）。
COOKIE_SECURE=false

# --- Server Settings ---
HOST="127.0.0.1"
PORT=8000
UVICORN_RELOAD=true